<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frog_wallpaper_by_pianomonkey"
    tools:context=".MainActivity"
    android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MainActivity"
	    android:layout_weight="20"
	    android:id="@+id/topLayout" >
	        
	    <Button
	        android:id="@+id/profileBT"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/profile_pic_default"/>
	</RelativeLayout>
     
    <RelativeLayout 
        android:id="@+id/offerOrTakeARide" 
        android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MainActivity"
	    android:layout_weight="80" >

		<TextView
		    android:id="@+id/centerTV"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:text="" 
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"/>
		
		<ImageButton
		    android:contentDescription="@+id/favouritesIMGBT"
	        android:id="@+id/favouritesIMGBT"
	        android:background="@drawable/favorite_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_above="@+id/centerTV"
	        android:text="" />
		
		<ImageButton     
	        android:id="@+id/mapIMGBT"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
	        android:layout_centerInParent="true"
	        android:layout_below="@+id/centerTV"
	        android:background="@drawable/map_icon" />

		<ImageButton
		    android:id="@+id/getARideIMGBT"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignTop="@+id/offerRideIMGBT"
		    android:background="@drawable/need_a_ride_icon" />

		<ImageButton
		    android:id="@+id/offerRideIMGBT"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/open_a_ride_icon"
		    android:contentDescription="@string/offerRideIMGBTdesc" />
	        
	</RelativeLayout>
    
