<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/basicFormRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/fromTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="From  :" />

        <AutoCompleteTextView
            android:id="@+id/fromET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/switchIMGBT"
            android:layout_toRightOf="@+id/fromTV"
            android:ems="10"
            android:hint="Starting Point"
            android:inputType="text"
            android:textColorHint="@color/hint_color" />

        <TextView
            android:id="@+id/toTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromTV"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="To  :" />

        <EditText
            android:id="@+id/toET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/toTV"
            android:layout_alignBottom="@+id/toTV"
            android:layout_alignRight="@+id/fromET"
            android:layout_toRightOf="@+id/toTV"
            android:ems="10"
            android:hint="Destination"
            android:inputType="text"
            android:textColorHint="@color/hint_color" />

		<ImageButton
		    android:id="@+id/switchIMGBT"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/toTV"
		    android:layout_alignParentRight="true"
		    android:layout_alignTop="@+id/checkingForSimilarRidesFadeInIV"
		    android:src="@drawable/two_sides_arrow" />
		
		<ImageButton
            android:id="@+id/chooseDateIMGBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toTV"
            android:layout_alignLeft="@+id/toTV"
            android:background="@drawable/calndar_clock_icon"
            android:paddingTop="@dimen/activity_vertical_margin" />
		<TextView
            android:id="@+id/choosenDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chooseDateIMGBT"
            android:layout_toRightOf="@+id/chooseDateIMGBT"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Button
            android:id="@+id/submitBTN"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chooseDateIMGBT"
			android:layout_below="@+id/chooseDateIMGBT"
            android:text="Submit my ride" />
        
        <ImageView
	     android:id="@+id/checkingForSimilarRidesFadeInIV"
	     android:src="@drawable/checking_for_similar_ride"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignParentTop="true"
	     android:layout_centerHorizontal="true"
	     android:visibility="invisible"/>

        

    </RelativeLayout>

