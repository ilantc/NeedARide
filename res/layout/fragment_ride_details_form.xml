<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/basicFormRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/fromTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="From  :" />

        <AutoCompleteTextView
            android:id="@+id/fromET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/switchIMGBT"
            android:layout_toRightOf="@+id/fromTV"
            android:ems="10"
            android:hint="Starting Point"
            android:inputType="text"
            android:textColorHint="@color/hint_color" />

        <TextView
            android:id="@+id/toTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromTV"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="To  :" />

        <AutoCompleteTextView
            android:id="@+id/toET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/toTV"
            android:layout_alignBottom="@+id/toTV"
            android:layout_alignRight="@+id/fromET"
            android:layout_toRightOf="@+id/toTV"
            android:ems="10"
            android:hint="Destination"
            android:inputType="text"
            android:textColorHint="@color/hint_color" />

		<ImageButton
		    android:id="@+id/switchIMGBT"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/toTV"
		    android:layout_alignParentRight="true"
		    android:layout_alignTop="@+id/checkingForSimilarRidesFadeInIV"
		    android:src="@drawable/switch_arrows" />

		<TextView
		    android:id="@+id/choosenDateTV"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/chooseDateIMGBT"
		    android:layout_alignTop="@+id/chooseDateIMGBT"
		    android:layout_toLeftOf="@+id/chooseDateIMGBT"
		    android:layout_toRightOf="@+id/fromTV"
		    android:text="Set time and date"
		    android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/DateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/toTV"
            android:layout_below="@+id/toTV"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Date  :" />
        
        <ImageView
            android:id="@+id/checkingForSimilarRidesFadeInIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fromTV"
            android:layout_centerHorizontal="true"
            android:src="@drawable/checking_for_similar_ride"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/chooseDateIMGBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/switchIMGBT"
            android:layout_below="@+id/switchIMGBT"
            android:background="@drawable/clock_icon"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <ImageButton
            android:id="@+id/submitIMGBT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/chooseDateIMGBT"
            android:layout_below="@+id/DateTV"
            android:background="@drawable/submit_button"/>

    </RelativeLayout>

