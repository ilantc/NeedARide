<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:id="@+id/basicFormRL">
     	
        <RelativeLayout 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:id="@+id/fromRL"
		    android:background="@layout/basic_form_rl_bg">
	        

	        <ImageView 
	            android:id="@+id/fromIV"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_alignBottom="@+id/fromET"
		        android:background="@drawable/from_no_fill"
	            />
	        
		   
		     <EditText
		  	    android:id="@+id/fromET"
		  	    android:layout_width="wrap_content"
		  	    android:layout_height="wrap_content"
		  	    android:layout_toRightOf="@+id/fromIV"
		  	    android:ems="10"
		  	    android:hint="Starting Point"
		  	    android:textColorHint="@color/hint_color"
		  	    android:inputType="text"/>
	  	</RelativeLayout>	
	  	
        <RelativeLayout 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:layout_marginTop="@dimen/activity_vertical_margin"
		    android:layout_below="@+id/fromRL"
		    android:id="@+id/toRL"
		    android:background="@layout/basic_form_rl_bg">
	        
	        <TextView
	  		    android:id="@+id/toTV"
	  		    android:layout_width="wrap_content"
	  		    android:layout_height="wrap_content"
	  		    android:paddingRight="@dimen/activity_horizontal_margin"
	  		    android:paddingTop="@dimen/activity_vertical_margin"
	  		    android:text="To  :" />
	        <EditText
	  		    android:id="@+id/toET"
	  		    android:layout_width="wrap_content"
	  		    android:layout_height="wrap_content"
	  		    android:layout_toRightOf="@+id/toTV"
	  		    android:ems="10"
	  		    android:hint="Destination"
	  		    android:textColorHint="@color/hint_color"
	  		    android:inputType="text" />
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:layout_marginTop="@dimen/activity_vertical_margin"
		    android:layout_below="@+id/toRL"
		    android:id="@+id/commentRL"
		    android:background="@layout/basic_form_rl_bg">
	        
	        <TextView
	  		    android:id="@+id/commentTV"
	  		    android:layout_width="wrap_content"
	  		    android:layout_height="wrap_content"
	  		    android:paddingRight="@dimen/activity_horizontal_margin"
	  		    android:paddingTop="@dimen/activity_vertical_margin"
	  		    android:text="Comment:" />
	        
	        <EditText
	  		    android:id="@+id/commentET"
	  		    android:layout_width="wrap_content"
	  		    android:layout_height="wrap_content"
	  		    android:layout_toRightOf="@+id/commentTV"
	  		    android:ems="10"
	  		    android:hint="Add whatever you want"
	  		    android:textColorHint="@color/hint_color"
	  		    
	  		    android:inputType="text" />
        </RelativeLayout> 
       	
        <RelativeLayout 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:layout_marginTop="@dimen/activity_vertical_margin"
		    android:layout_below="@+id/commentRL"
		    android:id="@+id/timeRL"
            >
	        <Button 
	            android:id="@+id/chooseDatepicBT"
	  		    android:layout_width="wrap_content"
	  		    android:layout_height="wrap_content"
	  		    android:paddingTop="@dimen/activity_vertical_margin"
	  		    android:background="@drawable/calndar_clock_icon" />

	        <Button 
	            android:id="@+id/chooseDateBT"
	  		    android:layout_width="wrap_content"
	  		    android:layout_height="wrap_content"
	  		    android:paddingTop="@dimen/activity_vertical_margin"
	  		    android:layout_toRightOf="@+id/chooseDatepicBT"
	  		    android:background="@null" />
	            />
        </RelativeLayout>

	</RelativeLayout>

</FrameLayout>