<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:id="@+id/fromRL">
     
        <TextView
            android:id="@+id/fromTV"
            android:paddingRight="@dimen/activity_horizontal_margin"
	    	android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:" />
   
        <EditText
  		    android:id="@+id/fromET"
  		    android:layout_alignLeft="@+id/commentET"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_toRightOf="@+id/fromTV"
  		    android:ems="10"
  		    android:hint="Starting Point"
  		    android:inputType="text" />
  		
        <TextView
  		    android:id="@+id/toTV"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_below="@+id/fromTV"
  		    android:paddingRight="@dimen/activity_horizontal_margin"
  		    android:paddingTop="@dimen/activity_vertical_margin"
  		    android:text="To:" />
        <EditText
  		    android:id="@+id/toET"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_below="@+id/fromET"
  		    android:layout_alignLeft="@+id/commentET"
  		    android:layout_toRightOf="@+id/toTV"
  		    android:ems="10"
  		    android:hint="Destination"
  		    android:inputType="text" />
        
        <TextView
  		    android:id="@+id/commentTV"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_below="@+id/toTV"
  		    android:paddingRight="@dimen/activity_horizontal_margin"
  		    android:paddingTop="@dimen/activity_vertical_margin"
  		    android:text="Comment:" />
        <EditText
  		    android:id="@+id/commentET"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_below="@+id/toET"
  		    android:layout_toRightOf="@+id/commentTV"
  		    android:ems="10"
  		    android:hint="Add whatever you want"
  		    android:inputType="text" />
        
  		<ImageButton
  		    android:id="@+id/chooseDateImgBT"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_below="@+id/commentTV"
  		    android:layout_alignTop="@+id/chooseTimeImgBT"
  		    android:paddingTop="@dimen/activity_vertical_margin"
  		    android:src="@drawable/calendar_frog_cartoon_with_title" />
        
  		<ImageButton
  		    android:id="@+id/chooseTimeImgBT"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_below="@+id/commentET"
  		    android:layout_toRightOf="@+id/chooseDateImgBT"
  		    android:src="@drawable/wall_clock_frog" />
        
	</RelativeLayout>

</FrameLayout>